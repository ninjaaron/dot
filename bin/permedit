#!/data/data/com.termux/files/usr/bin/env bash
if [[ $# == "0" ]]; then
  "$EDITOR"
else
  if (set -C; 2>/dev/null > $1 && rm $1) || [[ -w $1 || -d $1 ]]; then
    "$EDITOR" "$@"
  else
    echo -n "sudo [Y/n]? "
    read sudo
    [[ ${sudo:-y} == y ]] && sudo "$EDITOR" "$@" || "$EDITOR" "$@"
  fi 2> /dev/null
fi
