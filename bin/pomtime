#!/usr/bin/env bash

time="${1:-25}"
shift
command=( zenity --info --text='take a break!' )

for i in $(seq "$time");do
  sleep 60
  echo "$(( $time - i)) minutes remaining."
done
echo "take a break!"
mocp --pause &> /dev/null
sleep 1

if [[ "$@" ]]; then
  "$@"
else
  "${command[@]}" &> /dev/null
fi
