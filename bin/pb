#!/usr/bin/env bash

language=$1
name=$2
style=${3:-paraiso-dark}
{
cat << EOF
= $name
:source-highlighter: pygments
:pygments-style: $style

[source,$language,linenums]
----
$code
----
EOF
} | asciidoctor -o "$name.html" -
rsync "$name.html" sink:/var/www/code/
echo "http://phosmin.org/code/$name.html"
rm $name.html
