#!/bin/sh
if [ -x $2 ]; then
  lang="${1##*.}"
else
  lang="${2:-sh}"
fi

case "$lang" in
  perl)
    tmpl="\
#!/usr/bin/env perl

use 5.022;
use warnings;
use autodie;"
    ;;
  py|python)
    tmpl="\
#!/usr/bin/env python3


def main():
    print('hello, world.')


if __name__ == '__main__':
    main()"
    EDITOR="em"
    ;;
  jl|julia)
    tmpl='#!/usr/bin/env julia'
    EDITOR='em'
    ;;
  sh)
    tmpl="#!/bin/sh"
    ;;
  *)
    tmpl="#!/usr/bin/env $lang"
esac

printf "$tmpl\n" >> "$1"
chmod +x "$1"
eval "$EDITOR '$1'"
