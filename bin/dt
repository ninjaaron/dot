#!/data/data/com.termux/files/usr/bin/env bash
# this
cd $DOT
echo "================ git ================"
echo "== committing =="
echo ...commit termux...
git commit -am "updating dotfiles"
git checkout master
echo ...commit master...
git commit -am "update dotfiles"
echo "== pulling changes =="
git pull --recurse-submodules origin master
echo "== pushing changes =="
echo ...push master...
git push origin master
git checkout termux
echo ...merge master...
git merge master
echo ...push termux...
git push origin termux
echo "================ hg ================"
cd ../conf
hg addremove
echo "== committing =="
hg commit -m 'updating configs'
echo "== pulling changes =="
hg pull -u
hg merge
hg commit -m 'merging'
echo "== pushing changes =="
hg push
