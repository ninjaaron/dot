#!/usr/bin/env perl

use warnings;
use strict;

my ($total, $comments, $blanklines) = 0, 0, 0;

while (<>){
    $total++;
    $comments++ if /^\s*#/;
    $blanklines++ if /^\s*$/;
}
my $code = $total - $comments - $blanklines;

print << "END";
total lines: $total
$code lines of code
$comments comments
$blanklines blank lines
END
