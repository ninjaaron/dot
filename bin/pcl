#!/usr/bin/env perl
my ($total, $comments, $blanklines) = (0, 0, 0);

while (<>){
    $total++;
    $comments++ if /^\s*#/;
    # $comments++ if m[^\s*//];
    $blanklines++ if /^\s*$/;
}
my $code = $total - $comments - $blanklines;
print <<END;
total:    $total
code:     $code
comments: $comments
blank:    $blanklines
END
