#!/data/data/com.termux/files/usr/bin/env perl

use warnings;
use strict;

my ($total, $comments, $blanklines) = (0, 0, 0);

while (<>){
    $total++;
    $comments++ if /^\s*#/;
    $blanklines++ if /^\s*$/;
}
my $code = $total - $comments - $blanklines;
print <<END;
total:    $total
code:     $code
comments: $comments
blank:    $blanklines
END
