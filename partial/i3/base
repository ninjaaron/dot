# general
exec dunst
set $mod Mod4
floating_modifier $mod

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# window managment
bindsym $mod+x kill

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+a focus parent
bindsym $mod+Shift+m move scratchpad
bindsym $mod+m scratchpad show
# focus the child container
#bindsym $mod+d focus child

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+Control+h resize shrink width 2 px or 2 ppt
bindsym $mod+Control+j resize grow height 2 px or 2 ppt
bindsym $mod+Control+k resize shrink height 2 px or 2 ppt
bindsym $mod+Control+l resize grow width 2 px or 2 ppt

## frame splitting (wm logic is reverse of vim logic...)
bindsym $mod+v split h
bindsym $mod+s split v
bindsym $mod+e layout toggle split

bindsym $mod+Shift+s layout stacking
bindsym $mod+w layout tabbed

## floating stuff
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

# bindsym $mod+b border toggle
bindsym $mod+f fullscreen

## switch to workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

## move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

bindsym $mod+semicolon move workspace to output right

# media
bindsym $mod+Shift+d exec --no-startup-id i3-dmenu-desktop
bindsym XF86AudioRaiseVolume exec pulsemixer --change-volume +5
bindsym XF86AudioLowerVolume exec pulsemixer --change-volume -5
bindsym XF86AudioMute exec pulsemixer --toggle-mute
bindsym XF86AudioPlay exec mocp --toggle-pause
bindsym Pause exec  mocp --toggle-pause
bindsym XF86AudioNext exec mocp --next
bindsym XF86AudioPrev exec mocp --previous
bindsym XF86Calculator exec urxvtc -e bpython

bindsym $mod+equal exec ponymix increase 5
bindsym $mod+minus exec ponymix decrease 5
bindsym $mod+backslash exec mocp --toggle-pause
bindsym $mod+bracketleft exec mocp --previous
bindsym $mod+bracketright exec mocp --next
bindsym $mod+Shift+bracketleft exec mocp --seek -5
bindsym $mod+Shift+bracketright exec mocp --seek +5
bindsym $mod+Control+bracketleft exec mocp --seek -60
bindsym $mod+Control+bracketright exec mocp --seek +60

# launchers
## terminal
bindsym $mod+Return exec urxvtcd -e zsh
bindsym $mod+z exec urxvtcd -e xonsh
bindsym $mod+slash exec urxvtc -e ranger
bindsym $mod+apostrophe exec ~/clipboard2server

## xdotool pasting...
# bindsym Insert exec ~/bin/paste-primary
bindsym $mod+i exec ~/bin/heber2
bindsym $mod+g exec ~/bin/greeker

bindsym $mod+d exec ~/bin/dm
bindsym $mod+Escape exec ~/bin/pwr
bindsym $mod+grave exec i3lock -c 000000
bindsym XF86MonBrightnessDown exec light half
bindsym XF86MonBrightnessUp exec light dub

# rules
no_focus [class="feh"]
default_border pixel 2

workspace 10 output DP1
